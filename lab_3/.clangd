CompileFlags:
  # Указываем, где искать compile_commands.json
  Add:
    - -std=c++20
  CompilationDatabase: .

Diagnostics:
  # Показывать предупреждения из системных заголовков
  Suppress: []
  ClangTidy:
    Add: >
      *,
      -clang-analyzer-*,
      -llvm-header-guard,
      -misc-unused-parameters,
      -modernize-use-trailing-return-type,
      -readability-magic-numbers,
      -readability-identifier-length
      -llvmlibc-restrict-system-libc-headers
    # Включаем все оставшиеся проверки
    CheckOptions:
      readability-braces-around-statements.ShortStatementLines: "0"
      readability-implicit-bool-conversion.AllowIntegerConditions: "true"
      modernize-loop-convert.MinConfidence: reasonable
      modernize-use-auto.MinTypeNameLength: "0"
      performance-unnecessary-value-param.AllowedTypes: "::std::function"

Index:
  Background: Build
  StandardLibrary: true

Formatting:
  Style: file # clang-format будет брать стиль из .clang-format, если он есть

Hover:
  ShowAKA: true

InlayHints:
  Designators: true
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
